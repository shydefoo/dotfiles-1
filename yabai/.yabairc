#! /bin/bash

yabai -m config layout bsp                    # binary space partitioning
yabai -m config window_placement second_child # new window vertical will go right, horizontal go left

# padding
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

# mouse settings
yabai -m config mouse_follows_focus on # mouse follows whichever window is focused on
yabai -m config mouse_modifier alt
# left click + drag
yabai -m config mouse_action1 move
# right click + drag
yabai -m config mouse_action2 resize

# swap window if dropped into center of another window
yabai -m mouse_drop_action swap

# disable specific apps

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
